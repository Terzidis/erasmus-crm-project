{
  "version": 2,
  "installCommand": "corepack enable && pnpm install --no-frozen-lockfile",
  "buildCommand": "pnpm build:client",
  "outputDirectory": "dist",
  "framework": "vite",
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/api/main.ts" },
    { "source": "/(.*)", "destination": "/index.html" }
  ]
}
