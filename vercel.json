{
  "version": 2,
  "builds": [
    {
      "src": "api/main.ts",
      "use": "@vercel/node"
    },
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist" }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "api/main.ts"
    },
    {
      "src": "/auth/(.*)",
      "dest": "api/main.ts"
    },
    {
      "src": "/contacts/(.*)",
      "dest": "api/main.ts"
    },
    {
      "src": "/companies/(.*)",
      "dest": "api/main.ts"
    },
    {
      "src": "/deals/(.*)",
      "dest": "api/main.ts"
    },
    {
      "src": "/activities/(.*)",
      "dest": "api/main.ts"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ]
}
